#Terraform Env File:

AWS_SHARED_CREDENTIALS_FILE=~/.aws/credentials

export TF_VAR_region="us-east-1"
export TF_VAR_environment="production"

export TF_VAR_aws_access_key_id=$AWS_ACCESS_KEY
export TF_VAR_aws_secret_access_key=$AWS_SECRET_ACCESS_KEY

# STREAM VARS:
export TF_VAR_stream_name="911-stream-01"
export TF_VAR_shard_count=1
export TF_VAR_retention_period=48

# FIREHOSE VARS:
export TF_VAR_firehose_name="911-firehose"
export TF_VAR_bucket_name="911-bucket-01"
